{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-west1"
    },
    "rewrites": [
      {
        "source": "/__/auth/**",
        "destination": "/__/auth/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}